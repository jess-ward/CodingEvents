@using CodingEvents.Models

@model List<Event>

<h1>Coding Events</h1>


<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>


@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        </tr>
    @foreach (var meeting in Model)
    {
        <tr>
            <td>@meeting.Id</td>
            <td>@meeting.Name</td>
            <td>@meeting.Description</td>
  
        </tr>
    }
</table>
}
